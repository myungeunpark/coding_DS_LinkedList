// Given a linked list, reverse the nodes of a linked list k at a time and return its modified list.
/* k is a positive integer and is less than or equal to the length of the linked list. If the number of nodes is not a multiple of k then left-out nodes in the end should remain as it is.
 *  
 *  Example:
 *  Given this linked list: 1->2->3->4->5
 *  For k = 2, you should return: 2->1->4->3->5
 *  For k = 3, you should return: 3->2->1->4->5
//  
// https://leetcode.com/problems/reverse-nodes-in-k-group/
/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
   
    class Node{
        
        ListNode reverse;
        ListNode nextPos;
    }
    
    private boolean checkLen(ListNode head, int k){
        
        int count = 0;
        ListNode cur = head;
        while((cur != null) && (count < k)){
            count++;
            cur = cur.next;
        }
        
        if(count < k)
            return false;
        else
            return true;
    }
    private Node reverseK(ListNode head, int k){
        
        ListNode prev = null;
        ListNode cur = head;
        ListNode next = null;
        int count = 0; 
        
        Node ret = new Node();
        
        if(!checkLen(head, k)){
         
            ret.reverse = head;
            ret.nextPos = null;
            return ret;
        }             
            
        while(cur != null && count < k){
            
            next = cur.next;
            cur.next = prev;
            
            prev = cur;
            cur = next;            
            count++;
        }
                       
        ret.reverse = prev;
        ret.nextPos = cur;
        return ret;
    }
    
    public ListNode reverseKGroup(ListNode head, int k) {
        
        ListNode header = new ListNode(0);
        ListNode prev = header;
        ListNode nextPairs = head;
        while(nextPairs != null){
            
            Node node = reverseK(nextPairs, k);
            
            prev.next = node.reverse;
            prev = nextPairs;
            
            nextPairs = node.nextPos;
        }
        
        return header.next;
        
    }
}
