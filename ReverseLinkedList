// Reverse the Single Linked List 
// method 1. 
/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
    public ListNode reverseList(ListNode head) {
   
        ListNode prev = null;
        ListNode cur  = head;
        ListNode next = null;
        
        while(cur != null){
            
            next = cur.next;
            cur.next = prev;
            
            prev = cur;
            cur = next;
        }
        
        return prev;
    }
}

// Method 2 by using recursive
class Solution {
    
    private ListNode first = null;
    public ListNode reverseList(ListNode head) {
   
        if(head == null)
            return null;
        
        return reverse(head, null);
    }
    
    private ListNode reverse(ListNode cur, ListNode prev){
        
        if(cur == null){
            return prev; 
        }
                    
        ListNode next = cur.next;
        cur.next = prev;
                
        return reverse(next, cur);
    }
    
    
}
