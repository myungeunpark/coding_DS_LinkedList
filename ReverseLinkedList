// Reverse the Single Linked List 
// method 1. 
/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
 
// Time Complexity - O(N) 
// Space Complexity - O(1)
class Solution {
    public ListNode reverseList(ListNode head) {
   
        ListNode prev = null;
        ListNode cur  = head;
        ListNode next = null;
        
        while(cur != null){
            
            next = cur.next;
            cur.next = prev;
            
            prev = cur;
            cur = next;
        }
        
        return prev;
    }
}

// Method 2 by using recursive
// Time Complexity - O(N)
// Space Complexity - O(N)
class Solution {
    
    public ListNode reverseList(ListNode head) {
        
        if(head == null)
            return null;
        
        if(head.next == null)
            return head;
        
        ListNode ret = reverseList(head.next);
        head.next.next = head;
        head.next = null; // remove cycle 
        return ret;
    }  
}
