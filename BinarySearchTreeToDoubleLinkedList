// https://leetcode.com/problems/convert-binary-search-tree-to-sorted-doubly-linked-list/submissions/
//  Convert Binary Search Tree to Sorted Doubly Linked List
/*
// Definition for a Node.
class Node {
    public int val;
    public Node left;
    public Node right;

    public Node() {}

    public Node(int _val) {
        val = _val;
    }

    public Node(int _val,Node _left,Node _right) {
        val = _val;
        left = _left;
        right = _right;
    }
};
*/

class Solution {
    
    Node header;
    Node prev;
    public Node treeToDoublyList(Node root) {
        
        if(root == null)
            return null;
        
        header = new Node();
        prev = header;
        
        inOrder(root);
        
        
        prev.right = header.right;
        header.right.left = prev;
        return header.right;
    }
    
    private void inOrder(Node root){
        
        if(root == null)
            return;
        
        inOrder(root.left);    
        Node node = new Node(root.val);
        prev.right = node;
        node.left = prev;
        
        prev = node;
        
        inOrder(root.right);
        
    }
}
