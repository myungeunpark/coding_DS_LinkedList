// Delete Node from Double Linked List with specific index
// https://practice.geeksforgeeks.org/problems/delete-node-in-doubly-linked-list/1

Node deleteNode(Node head,int x)
    {
	        if(head == null)
	            return null;
	           
	        int count = 1;    
	        Node prev = null; 
	        Node cur = head; 
	        while(cur != null){
	            
	            if(count == x){
	                
	                if(count == 1){
	                    cur.next.prev = null;
	                    head = cur.next;
	                    
	                }else{
	                
	                    prev.next = cur.next;
	                    if(cur.next != null)
	                        cur.next.prev = cur.prev;
	                        
	                    prev = cur;    
	                }
	            }else{
	                prev = cur;    
	            }
	            
	            cur = cur.next;
	            count++;
	        }
		
		return head;
    }
}
